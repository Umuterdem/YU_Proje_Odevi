<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:id="@+id/marmaray"
    android:layout_height="match_parent"
    tools:context=".marmarabolgesi"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/geridon"
                android:src="@drawable/geridon2"
                android:layout_width="45dp"
                android:background="#000000"
                android:layout_height="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:background="#FF9800"
                android:padding="5dp"
                android:text="Maramara Bölgesinde gezilecek yerler"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:background="#FF9800"
                android:text="Avşa Adası(Balıkesir)"
                android:textSize="18sp"/>
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/avsa"
                android:id="@+id/btnavsa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Avşa Adası Hakında Bilgi  Edinmek İçin Resme Dokununuz...!"
                android:textColor="#ffffff"
                android:background="#FF9800"
                />
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:background="#FF9800"
                android:text="Bozcada(Çanakkale)"
                android:textSize="18sp"/>
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/bozcaada"
                android:id="@+id/btnbozca"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="Bozcada Hakında Bilgi  Edinmek İçin Resme Dokununuz...!"
                android:textColor="#ffffff"
                android:background="#FF9800"
                />
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:background="#FF9800"
                android:text="Maramara Adası(Balıkesir)"
                android:textSize="16sp"/>
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/marmaraadasi"
                android:id="@+id/btnmarmar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Maramara Adası Hakında Bilgi  Edinmek İçin Resme Dokununuz...!"
                android:textColor="#ffffff"
                android:background="#FF9800"
                />
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:background="#FF9800"
                android:text="Uludağ(Bursa)"
                android:textSize="18sp"/>
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/bursa"
                android:id="@+id/btnulug"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Uludağ Hakında Bilgi  Edinmek İçin Resme Dokununuz...!"
                android:textColor="#ffffff"
                android:background="#FF9800"
                />



        </LinearLayout>

    </ScrollView>
</RelativeLayout>
