<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:id="@+id/icanadolu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".icanadolu">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageButton
            android:id="@+id/geridon"
            android:src="@drawable/geridon2"
            android:layout_width="45dp"
            android:background="#000000"
            android:layout_height="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#FF9800"
            android:padding="5dp"
            android:text="İç Anadolu Bölgesinde gezilecek yerler"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="#FF9800"
            android:text="Kapadokya(NevŞehir)"
            android:textSize="18sp"/>
        <ImageButton
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/kapadokya"
            android:id="@+id/btnevsehir"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kapadokya Hakında Bilgi  Edinmek İçin Resme Dokununuz...!"
            android:textColor="#ffffff"
            android:background="#FF9800"
            />

            <TextView
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:background="#FF9800"
                android:text="Anıtkabir(Ankara)"
                android:textSize="18sp"/>
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/anitkabir"
                android:id="@+id/btnankara"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Anıtkabir Hakında Bilgi  Edinmek İçin Resme Dokununuz...!"
                android:textColor="#ffffff"
                android:background="#FF9800"
                />
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:background="#FF9800"
                android:text="Alacahöyük(Çorum)"
                android:textSize="18sp"/>
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/alaca"
                android:id="@+id/btncorum"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="alacahoyuk Hakında Bilgi  Edinmek İçin Resme Dokununuz...!"
                android:textColor="#ffffff"
                android:background="#FF9800"
                />
            <TextView
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:background="#FF9800"
                android:text="Divriği Ulu Cami(Sivas)"
                android:textSize="18sp"/>
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/divrigi"
                android:id="@+id/btnsivas"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Divrigi ulu cami Hakında Bilgi  Edinmek İçin Resme Dokununuz...!"
                android:textColor="#ffffff"
                android:background="#FF9800"
                />

        </LinearLayout>

    </ScrollView>







</RelativeLayout>
